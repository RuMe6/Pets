<Window x:Class="TaskManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TaskManagerWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
    <Grid>
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock Text="Менеджер задач" FontSize="24" FontWeight="Bold" Foreground="DarkSlateGray" 
                       Margin="0 0 0 20" HorizontalAlignment="Center"/>
            
            <!-- Кнопка ввода новой задачи -->
            <Button Content="Новая задача" 
                    Click="AddTask"
                    BorderBrush="Aquamarine" 
                    HorizontalAlignment="Center"/>

            
        </StackPanel>
    </Grid>
</Window>
